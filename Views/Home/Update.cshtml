@model RepeatOperationForAspNet.Models.Student
<html>
<head>
    <title>Create new Student</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css " rel="stylesheet">

</head>

<body>
    <div class="container">
        <h3>Create Customer</h3>

        <form action="/Home/Update" method="post">
            <div class="form-group">
                <input type="hidden" name="studentId" value="@Model.StudentId" />
            </div>
            <div class="form-group">
                <label>Enter Student Name</label>
                <input type="text" name="studentName"  class="form-control" value="@Model.StudentName" />
            </div>

            <div class="form-group">
                <label>Enter Student Last Name</label>
                <input type="text" name="studentLastName" class="form-control"  value="@Model.StudentLastName"/>
            </div>
            <div class="form-group">
                <label>Enter Student Grade</label>
                <input type="text" name="studentGrade" class="form-control" value="@Model.StudentGrade"/>
            </div>

            <div class="from-group text-right">
                <button type="submit" class="btn btn-danger">Update Student</button>
            </div>

        </form>
    </div>
</body>
</html>