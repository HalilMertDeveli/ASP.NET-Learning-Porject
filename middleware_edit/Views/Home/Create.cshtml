
@model Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
    <body>
        <div class="container">
            <h3>Create Customer</h3>

        <form asp-action="Create" asp-controller="Home" method="post">
                <div class="form-group">
                    <label>
                        Customer Name: <span class="text-danger">*</span>
                                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        
                    
                    </label>
                    <input  asp-for="@Model.FirstName" type="text" name="firstName" class="form-control"/>

                </div>

                <div class="form-group">
                    <label>
                        Customer Last Name: <span class="text-danger">*</span>
                                            <span class="text-danger" asp-validation-for="@Model.LastName"></span>
                        
                    
                    </label>
                    <input type="text" asp-for="@Model.LastName" class="form-control" />

                </div>

                <div class="form-group">
                    <label>
                        Customer Age:<span class="text-danger">*</span>
                                     <span class="text-danger" asp-validation-for="@Model.Age"></span>   
                    
                    </label>
                    <input type="text" asp-for="@Model.Age" class="form-control" />

                </div>

                <div class="form-group text-right">
                    <button type="submit"  class="btn btn-primary">Create </button>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>


        </form>

        </div>

    </body>
