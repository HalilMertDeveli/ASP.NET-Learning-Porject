
@model Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="container">
        <h3>Update Customer</h3>
        @if (Model != null)
        {
            <form asp-controller="Home" asp-action="Update" method="post">
                <input  type="hidden" name="id" value="@Model.Id" /> @* we wrote this but not show the use  *@
                <div class="form-group">
                    <label>first name: </label>
                    <input  class="form-control"  asp-for="@Model.FirstName"/>
                </div>

                <div class="form-group">
                    <label>Last name: </label>
                    <input class="form-control" asp-for="@Model.LastName"/>
                </div>

                <div class="form-group">
                    <label>Age:  </label>
                    <input  class="form-control" asp-for="@Model.Age"/>
                </div>
                <div class="form-group">
                    <label>Submit</label>
                    <button class="btn btn-danger" type="submit">Save</button>
                </div>
            </form>
        }
        else
        {
            <p>Model is null. Cannot display the form.</p>
        }
    </div>
</body>
