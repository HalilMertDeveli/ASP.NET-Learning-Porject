@model middleware_edit.Models.CustomerModel
<html>
<head>
    <title>Update Customer</title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h3>Update Customer</h3>
        @if (Model != null)
        {
            <form action="/Home/UpdateCustomer" method="post">
                <input type="hidden" name="id" value="@Model.Id" /> @* we wrote this but not show the use  *@
                <div class="form-group">
                    <label>first name: </label>
                    <input type="text" name="firstName" class="form-control" value="@Model.FirstName" />
                </div>

                <div class="form-group">
                    <label>Last name: </label>
                    <input type="text" name="lastName" class="form-control" value="@Model.LastName" />
                </div>

                <div class="form-group">
                    <label>Age:  </label>
                    <input type="text" name="Age" class="form-control" value="@Model.Age" />
                </div>
                <div class="form-group">
                    <label>Submit</label>
                    <button class="btn btn-danger" type="submit">Save</button>
                </div>
            </form>
        }
        else
        {
            <p>Model is null. Cannot display the form.</p>
        }
    </div>
</body>
</html>
